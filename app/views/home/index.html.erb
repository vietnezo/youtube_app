<div class="tournament-vertical-list" id="tournaments">
  <div class="row">
    <div class="col-md-9">
      <% @movies.each do |movie| %>
        <div class="row mb-4">
          <div class="col-md-3"></div>
          <div class="col-md-5">
            <iframe src="<%= make_youtube_embed_link(movie.url) %>"
              class="w-100"
              frameborder="0"
              allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen></iframe>
          </div>
          <div class="col-md-4">
            <div class="font-weight-bold"><%= movie.title %></div>
            <div class="">Shared by: <%= movie.user.email %></div>
            <div class="desc">Description:</div>
            <div class="desc"><%= movie.description %></div>
            <div class="holding-date">
              <%#= fa_icon "calendar", style: "color: green" %>
              <small class="text-muted">
                <%= t("activerecord.attributes.movie.holding_date") %>:
              </small>
            </div>
            <div class="deadline">
              <%#= fa_icon "clock-o", style: "color: green" %>
              <small class="text-muted mr-2">
                <%= t("movie.meeting_time") %>:
              </small>
            </div>
          </div>
        </div>
      <% end %>
      <%= will_paginate @movies %>
    </div>
  </div>
</div>
